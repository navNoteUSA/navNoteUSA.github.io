# Set to False in production
DEBUG=False

# Generate with: openssl rand -hex 32
SECRET_KEY=your-secure-secret-key-here

# Comma-separated list of hosts
ALLOWED_HOSTS=.navnote.net,localhost,127.0.0.1

# Database URL (format: postgres://user:pass@host:port/dbname)
DATABASE_URL=postgres://navnote:password@your-rds-instance.us-east-1.rds.amazonaws.com:5432/navnotedb

# CORS settings
CORS_ALLOWED_ORIGINS=https://navnote.net,http://localhost:3000,http://127.0.0.1:3000

# AWS Settings
AWS_STORAGE_BUCKET_NAME=navnote-static-files-bucket
AWS_S3_REGION_NAME=us-east-1 